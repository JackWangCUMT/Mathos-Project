<metro:MetroWindow x:Class="RubyInt.Windows.ReplWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="REPL" Height="480" Width="640">
    <Grid>
        <TextBox x:Name="InputBox" HorizontalAlignment="Stretch" Height="22" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" metro:TextBoxHelper.ClearTextButton="True" metro:TextBoxHelper.Watermark="Input Command" KeyDown="InputBox_OnKeyDown"/>
        <RichTextBox x:Name="OutputBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="True" Margin="10,41,10,10">
            <FlowDocument>
                <Paragraph />
            </FlowDocument>
        </RichTextBox>
    </Grid>
</metro:MetroWindow>
