<metro:MetroWindow x:Class="RubyInt.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Settings" Height="135" Width="300" ResizeMode="NoResize" Loaded="SettingsWindow_OnLoaded">
    <Grid>
        <CheckBox x:Name="showLineNumbers" Content="Show Line Numbers" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="applyButton" Content="Apply and Restart" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="274" Click="applyButton_Click"/>
    </Grid>
</metro:MetroWindow>
