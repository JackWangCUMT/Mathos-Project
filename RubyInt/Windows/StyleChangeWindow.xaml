<metro:MetroWindow x:Class="RubyInt.Windows.StyleChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Change Style" Width="190" Height="110" ResizeMode="NoResize">
    <Grid>
        <Label Content="Style: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="StyleBox" HorizontalAlignment="Left" Margin="51,10,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Light" Height="100" Width="100"/>
            <ComboBoxItem Content="Dark" Height="100" Width="100"/>
        </ComboBox>
        <Button Content="Apply and Restart" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Width="161" Click="Button_Click"/>
    </Grid>
</metro:MetroWindow>
